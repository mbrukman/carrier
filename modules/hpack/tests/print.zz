export fn main() -> int {
    err::Err+1000 mut e;
    err::new(&e);

    u8 mut wire[2000];
    usize wirelen = as<usize>(fread(wire, sizeof(char), static(len(wire)), stdin));
    static_attest(len(wire) >= wirelen);
    let s  = slice::slice::new(wire, wirelen);
    for (let mut it = decoder::decode(s); it.next(&e);) {
        if err::check(&e) {
            err::eprint(&e);
            return 2;
        }
        printf(">%.*s< = >%.*s<\n", it.key.size, it.key.mem, it.val.size, it.val.mem);
    }


    return 0;
}
